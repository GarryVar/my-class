{
  "name": "my-class",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "browser-sync start --server src --no-notify --no-ui --cwd src --files index.html, styles/**/*",
    "build": "npm run html && npm run styles",
    "html": "html-minifier --remove-cmoments --collapse-whitespace --input-dir src --outpud-dir dist --file-ext html",
    "styles": "postcss src/styles/index.css  --use postcss-import --use postcss-csso --no-map --output dist/styles/index.css"
  },
  "author": "garryvar",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^3.0.2",
    "html-minifier": "^4.0.0",
    "postcss-cli": "^11.0.0",
    "postcss-csso": "^6.0.1",
    "postcss-import": "^15.1.0"
  }
}